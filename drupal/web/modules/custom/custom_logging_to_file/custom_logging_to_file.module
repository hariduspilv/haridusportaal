/**
 * Implements hook_cron().
 */
function delete_old_logs_cron() {
        $import_controller = new DeleteLogsController();
        $starttime = time();
        $deleted = 0;

        /** @var QueueFactory $queue_factory */
        $queue_factory = \Drupal::service('queue');
        /** @var QueueInterface $queue */
        $queue = $queue_factory->get('cron_delete_old_logs');

        $directories = $import_controller->import();
        foreach($schoolnodes as $schoolnode){
          $queue->createItem($schoolnode);
          if(isset($schoolnode['school_field']['nid'])){
            if($schoolnode['school_field']['status'] == '1'){
              $updated++;
            }else{
              $unpublished++;
            }
          }else{
            $added++;
          }
        }
        $elapsedtime = time() - $starttime;
        $message = t('Tekitatud uued kirjed kustutamisele minevatele logide jÃ¤rjekorda. Kustutamisele kauste: @unpublished, Kulunud aeg (sekundid): @elapsedtime', array('@unpublished' => $deleted, '@elapsedtime' => $elapsedtime));
        \Drupal::service('htm_custom_file_logging.write')->write('notice', 'Vanade logikirjete kustutamine', $message);
}
