          },
          "required": ["et"]
        },
        "hide_steps": {
          "type": "boolean"
        },
        "steps":{
          "type": "object",
          "minItem": 5
        },
        "messages": {
          "type": "object"
        }
      },
      "required": ["title", "steps"]
    },
    "messages": {
      "type": "object",
      "properties": {
        "success_message": {
          "type": "object",
          "properties": {
