              "type": "object",
              "properties": {
                "et": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "required": [
                "et"
              ]
            },
            "message_type": {
              "type": "string",
              "enum": [
                "NOTICE",
                "WARNING",
                "ERROR"
              ],
              "minLength": 1
            }
          },
          "required": [
            "message_text",
            "message_type"
          ]
        },
        "error_message": {
          "type": "object",
          "properties": {
            "message_text": {
              "type": "object",
              "properties": {
                "et": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "required": [
                "et"
              ]
            },
            "message_type": {
              "type": "string",
              "enum": [
                "NOTICE",
                "WARNING",
                "ERROR"
              ],
              "minLength": 1
            }
          },
          "required": [
            "message_text",
            "message_type"
          ]
        }
      },
      "required": ["success_message", "error_message"]
    }
  },
  "required": ["header", "body", "messages"]
